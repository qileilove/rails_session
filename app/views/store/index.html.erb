<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<h1>Your Pragmatic Catalog</h1>

<% @products.each do |product| %>
    <div class="entry">
     <%= image_tag(product.image_url, id:'images') %>
      <h3 class="bg-info"><%= product.title %></h3>
      <%= sanitize(product.description) %>
      <div class="price_line ">
        <!-- START:currency -->
        <span class="price bg-info"><%= number_to_currency(product.price) %></span>
        <!-- START_HIGHLIGHT -->
        <%= button_to 'Add to Cart', ideas_path(:product_id => product),class:'btn btn-default' %>
        <!-- END_HIGHLIGHT -->
        <!-- END:currency -->
      </div>
    </div>
<% end %>
